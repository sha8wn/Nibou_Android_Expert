<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chat_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
            android:padding="@dimen/dim_5"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/name"
                android:textColor="@color/screen_title_color"
                android:fontFamily="@font/ubuntu_b"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/txt_16"
                android:layout_toLeftOf="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/time"
                android:textColor="@color/login_hint"
                android:textSize="@dimen/txt_12"
                android:fontFamily="@font/ubuntu_r"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
            android:padding="@dimen/dim_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/message"
                android:textColor="@color/login_hint"
                android:textSize="@dimen/txt_14"
                android:fontFamily="@font/ubuntu_b"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/message_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/message_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_background_counter"
                android:fontFamily="@font/ubuntu_b"
                android:text="3"
                android:gravity="center"
                android:textSize="@dimen/txt_12"
                android:textColor="@color/screen_title_color"/>

    </RelativeLayout>

    <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:background="@color/grey_c7"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_10"
            android:alpha="0.8"
            android:layout_height="@dimen/dim_1"/>
</LinearLayout>