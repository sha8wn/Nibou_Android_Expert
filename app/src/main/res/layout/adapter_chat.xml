<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white">

    <TextView
            android:id="@+id/tv_date"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/dialog_editfield_drawable"
            android:ellipsize="end"
            android:gravity="center"
            android:inputType="text|textNoSuggestions"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="3dp"
            android:paddingTop="15dp"
            android:paddingRight="3dp"
            android:paddingBottom="15dp"
            android:text="Sunday, 12:15PM"
            android:textColor="@color/screen_title_color"
            android:textSize="14sp"
            android:visibility="gone" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_date"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/left_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:visibility="visible">

            <RelativeLayout
                    android:id="@+id/l_relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="50dp">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/chat_bubble_gray"
                        android:orientation="vertical">

                    <RelativeLayout
                            android:id="@+id/left_drawable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                                android:id="@+id/left_mediaView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:elevation="2dp"
                                android:visibility="gone"
                                app:cardBackgroundColor="@android:color/transparent">

                            <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                <ImageView
                                        android:id="@+id/left_imageView"
                                        android:layout_width="240dp"
                                        android:layout_height="230dp"
                                        android:layout_centerInParent="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/default_placeholder"
                                        android:visibility="visible" />

                                <RelativeLayout
                                        android:id="@+id/left_image_action"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:visibility="gone">

                                    <ImageView
                                            android:id="@+id/left_download"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/download_play" />

                                    <TextView
                                            android:id="@+id/left_action_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:fontFamily="@font/ubuntu_r"
                                            android:text="Retry"
                                            android:textColor="@color/white"
                                            android:textSize="14sp"
                                            android:textStyle="bold"
                                            android:visibility="gone" />

                                </RelativeLayout>

                                <ProgressBar
                                        android:id="@+id/left_progress"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_centerInParent="true"
                                        android:visibility="gone" />

                                <TextView
                                        android:id="@+id/left_image_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignRight="@+id/left_imageView"
                                        android:layout_alignBottom="@+id/left_imageView"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/ubuntu_r"
                                        android:gravity="center"
                                        android:inputType="text|textNoSuggestions"
                                        android:lines="1"
                                        android:maxLines="1"
                                        android:padding="8dp"
                                        android:text="12:22"
                                        android:textColor="@color/white"
                                        android:textSize="10sp" />

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>


                        <com.kevalpatel2106.emoticongifkeyboard.widget.EmoticonTextView
                                android:id="@+id/left_text_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/left_mediaView"
                                android:autoLink="all"
                                android:fontFamily="@font/ubuntu_r"
                                android:gravity="start"
                                android:linksClickable="true"
                                android:paddingLeft="8dp"
                                android:paddingTop="8dp"
                                android:paddingRight="8dp"
                                android:text="Hi"
                                android:textAlignment="viewStart"
                                android:textColor="@color/dialog_title_color"
                                android:textSize="14sp" />
                    </RelativeLayout>

                    <TextView
                            android:id="@+id/left_text_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:fontFamily="@font/ubuntu_r"
                            android:gravity="center"
                            android:inputType="text|textNoSuggestions"
                            android:lines="1"
                            android:maxLines="1"
                            android:paddingRight="8dp"
                            android:paddingBottom="8dp"
                            android:text="12:22"
                            android:textColor="@color/retry_circle_color"
                            android:textSize="10sp" />

                </LinearLayout>
            </RelativeLayout>

            <ImageView
                    android:id="@+id/left_bookmark"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/l_relative"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/dim_10"
                    android:src="@drawable/bookmark_green" />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/right_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:visibility="visible">

            <ImageView
                    android:id="@+id/right_bookmark"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/r_relative"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/dim_10"
                    android:src="@drawable/bookmark_green" />

            <RelativeLayout
                    android:id="@+id/r_relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="50dp">


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/chat_buble_lightblue"
                        android:orientation="vertical">

                    <RelativeLayout
                            android:id="@+id/right_drawable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                                android:id="@+id/right_mediaView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:elevation="2dp"
                                android:visibility="gone"
                                app:cardBackgroundColor="@android:color/transparent">

                            <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                <ImageView
                                        android:id="@+id/right_imageView"
                                        android:layout_width="240dp"
                                        android:layout_height="230dp"
                                        android:layout_centerInParent="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/default_placeholder"
                                        android:visibility="visible" />

                                <RelativeLayout
                                        android:id="@+id/right_image_action"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:visibility="gone">

                                    <ImageView
                                            android:id="@+id/right_download"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/download_play" />

                                    <TextView
                                            android:id="@+id/right_action_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:fontFamily="@font/ubuntu_r"
                                            android:text="Retry"
                                            android:textColor="@color/white"
                                            android:textSize="14sp"
                                            android:textStyle="bold"
                                            android:visibility="gone" />

                                </RelativeLayout>

                                <ProgressBar
                                        android:id="@+id/right_progress"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_centerInParent="true"
                                        android:visibility="gone" />

                                <TextView
                                        android:id="@+id/right_image_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/right_imageView"
                                        android:layout_alignParentRight="true"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/ubuntu_r"
                                        android:gravity="center"
                                        android:inputType="text|textNoSuggestions"
                                        android:lines="1"
                                        android:maxLines="1"
                                        android:padding="8dp"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:textSize="10sp" />

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>


                        <com.kevalpatel2106.emoticongifkeyboard.widget.EmoticonTextView
                                android:id="@+id/right_text_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/right_mediaView"
                                android:autoLink="all"
                                android:fontFamily="@font/ubuntu_r"
                                android:gravity="start"
                                android:linksClickable="true"
                                android:paddingLeft="8dp"
                                android:paddingTop="8dp"
                                android:paddingRight="8dp"
                                android:text="Hello"
                                android:textAlignment="viewStart"
                                android:textColor="@color/dialog_title_color"
                                android:textSize="14sp"
                                android:visibility="visible" />
                    </RelativeLayout>

                    <TextView
                            android:id="@+id/right_text_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:fontFamily="@font/ubuntu_r"
                            android:gravity="center"
                            android:inputType="text|textNoSuggestions"
                            android:lines="1"
                            android:maxLines="1"
                            android:paddingRight="8dp"
                            android:paddingBottom="8dp"
                            android:text="12:00"
                            android:textColor="@color/retry_circle_color"
                            android:textSize="10sp" />
                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
