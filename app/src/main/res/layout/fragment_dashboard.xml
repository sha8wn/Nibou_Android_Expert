<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.DashboardFragment">


        <TextView
                android:id="@+id/textView"
                android:textColor="@color/screen_title_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_40"
                android:layout_marginLeft="@dimen/dim_20"
                android:layout_marginRight="@dimen/dim_20"
                android:textSize="@dimen/txt_24"
                android:fontFamily="@font/ubuntu_b"
                android:text="@string/dashboard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_r"
                android:layout_marginStart="@dimen/dim_20"
                android:layout_marginLeft="@dimen/dim_20"
                android:layout_marginTop="@dimen/dim_10"
                android:textSize="@dimen/txt_14"
                android:text="@string/join_txt"
                android:textColor="@color/grey_light_text_color_dashboard"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"/>


        <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dim_20"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="@dimen/dim_40"
                android:background="@drawable/round_background"
                android:orientation="vertical"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">


                <LinearLayout
                        android:layout_width="@dimen/dim_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/dim_20">

                    <TextView
                            android:id="@+id/total_amount"
                            android:textSize="@dimen/txt_16"
                            android:textColor="@color/screen_title_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/ubuntu_m"
                            android:text="AED 1,028"/>

                    <TextView
                            android:id="@+id/textView65"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dim_10"
                            android:textSize="@dimen/txt_14"
                            android:fontFamily="@font/ubuntu_m"
                            android:textColor="@color/grey_text_color_dashboard"
                            android:layout_weight="1"
                            android:text="@string/total"/>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="@dimen/dim_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/dim_20">

                    <TextView
                            android:id="@+id/month_amount"
                            android:textSize="@dimen/txt_16"
                            android:textColor="@color/screen_title_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/ubuntu_m"
                            android:text="AED 30"/>

                    <TextView
                            android:id="@+id/textView46"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_m"
                            android:textColor="@color/grey_text_color_dashboard"
                            android:layout_marginTop="@dimen/dim_10"
                            android:textSize="@dimen/txt_14"
                            android:layout_weight="1"
                            android:text="@string/this_month"/>

                </LinearLayout>


            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_1"
                    android:background="@color/grey_c7"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">


                <LinearLayout
                        android:layout_width="@dimen/dim_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/dim_20">

                    <TextView
                            android:id="@+id/total_time"
                            android:fontFamily="@font/ubuntu_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_16"
                            android:textColor="@color/screen_title_color"
                            android:layout_weight="1"
                            android:text="3090 Mins"/>

                    <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey_text_color_dashboard"
                            android:fontFamily="@font/ubuntu_m"
                            android:layout_marginTop="@dimen/dim_10"
                            android:textSize="@dimen/txt_14"
                            android:layout_weight="1"
                            android:text="@string/total"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="@dimen/dim_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/dim_20">


                    <TextView
                            android:id="@+id/month_time"
                            android:textSize="@dimen/txt_16"
                            android:textColor="@color/screen_title_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/ubuntu_m"
                            android:text="20 Mins"/>

                    <TextView
                            android:id="@+id/textView7"
                            android:fontFamily="@font/ubuntu_m"
                            android:layout_width="wrap_content"
                            android:textColor="@color/grey_text_color_dashboard"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dim_10"
                            android:textSize="@dimen/txt_14"
                            android:layout_weight="1"
                            android:text="@string/this_month"/>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <TextView
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_margin="@dimen/dim_20"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/round_background"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:gravity="center"
                android:textColor="@color/screen_title_color"
                android:padding="@dimen/dim_10"
                android:text="@string/view_rating"
                android:textSize="@dimen/txt_14"
                android:fontFamily="@font/ubuntu_b"
                android:textAllCaps="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>

        <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/screen_title_color"
                android:textAllCaps="true"
                android:fontFamily="@font/ubuntu_b"
                android:layout_marginTop="@dimen/dim_40"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/view_review"
                android:textSize="@dimen/txt_14"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/history"/>


    </android.support.constraint.ConstraintLayout>
</layout>