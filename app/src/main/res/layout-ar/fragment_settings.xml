<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:ignore="MissingDefaultResource">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingRight="20dp"
            android:orientation="vertical">

        <include
                android:id="@+id/toolbar"
                layout="@layout/my_toolbar"/>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_b"
                    android:text="@string/settings"
                    android:textColor="@color/screen_title_color"
                    android:textSize="24sp"/>

            <ImageView
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:rotation="180"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:src="@drawable/menu_logout"/>

        </RelativeLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/profile_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentStart="true"
                            android:padding="10dp"
                            android:src="@drawable/menu_profile"/>

                    <TextView
                            android:id="@+id/update_profile"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:textAllCaps="false"
                            android:layout_width="match_parent"
                            android:gravity="center|end"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/profile_img"
                            android:fontFamily="@font/ubuntu_m"
                            android:padding="10dp"
                            android:text="@string/profile"
                            android:textColor="@color/screen_title_color"
                            android:textSize="16sp"/>


                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                    <ImageView
                            android:id="@+id/bio_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/menu_bio"/>

                    <TextView
                            android:id="@+id/bio"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:textAllCaps="false"
                            android:layout_width="match_parent"
                            android:gravity="center|right"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/bio_img"
                            android:fontFamily="@font/ubuntu_m"
                            android:padding="10dp"
                            android:text="@string/bio"
                            android:textColor="@color/screen_title_color"
                            android:textSize="16sp"/>


                </RelativeLayout>


                <RelativeLayout
                        android:id="@+id/lang_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginTop="10dp">

                    <ImageView
                            android:id="@+id/langauge_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/menu_password"/>

                    <TextView
                            android:id="@+id/change_pwd"
                            android:layout_width="match_parent"
                            android:gravity="center|right"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:textAllCaps="false"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/langauge_img"
                            android:fontFamily="@font/ubuntu_m"
                            android:padding="10dp"
                            android:layout_centerInParent="true"
                            android:text="@string/change_pwd"
                            android:textColor="@color/screen_title_color"
                            android:textSize="16sp"/>


                </RelativeLayout>


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                    <ImageView
                            android:id="@+id/timing_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentStart="true"
                            android:padding="10dp"
                            android:src="@drawable/menu_timesicon"/>

                    <TextView
                            android:id="@+id/timing"
                            android:layout_width="match_parent"
                            android:gravity="center|right"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/timing_img"
                            android:fontFamily="@font/ubuntu_m"
                            android:padding="10dp"
                            android:text="@string/manage_timing"
                            android:layout_centerInParent="true"
                            android:textColor="@color/screen_title_color"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:textAllCaps="false"
                            android:textSize="16sp"/>


                </RelativeLayout>


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                    <ImageView
                            android:id="@+id/special_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/menu_bookmark"/>

                    <TextView
                            android:id="@+id/specialization"
                            android:layout_width="match_parent"
                            android:gravity="center|right"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/special_img"
                            android:fontFamily="@font/ubuntu_m"
                            android:padding="10dp"
                            android:text="@string/expertise"
                            android:layout_centerInParent="true"
                            android:textColor="@color/screen_title_color"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:textAllCaps="false"
                            android:textSize="16sp"/>


                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                    <ImageView
                            android:id="@+id/language_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/menu_language"/>

                    <TextView
                            android:id="@+id/langauge"
                            android:layout_width="match_parent"
                            android:gravity="center|right"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/language_img"
                            android:fontFamily="@font/ubuntu_m"
                            android:padding="10dp"
                            android:layout_centerInParent="true"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:textAllCaps="false"
                            android:text="@string/language"
                            android:textColor="@color/screen_title_color"
                            android:textSize="16sp"/>


                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                    <ImageView
                            android:id="@+id/feedbck_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/menu_feedback"/>

                    <TextView
                            android:id="@+id/feedback"
                            android:layout_width="match_parent"
                            android:gravity="center|right"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/feedbck_img"
                            android:fontFamily="@font/ubuntu_m"
                            android:padding="10dp"
                            android:layout_centerInParent="true"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:textAllCaps="false"
                            android:text="@string/feedback"
                            android:textColor="@color/screen_title_color"
                            android:textSize="16sp"/>
                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>